/*自定义Toast样式*/
.toast_mask {
	/*0-全透明    1-不透明*/
	opacity: 0; 
	width: 100%;
	height: 100%;
	overflow: hidden;
	position: fixed;
	top: 0;
	left: 0;
	/**立体高低*/
	z-index: 888; 
}

.toast_content_box {
	width: 100%;
	height: 100%;
	margin-top: -200px;
	display: flex;
	justify-content: center;
	align-items: center;
	position: fixed;
	z-index: 999;
}

.toast_content {
	width: 50%;
	padding: 20rpx;
	background: rgba(0,0,0,0.5);
	border-radius: 20rpx;
	text-align: center;
}


.toast_content_box .toast_content span {
	color: yellow;
	font-size: 80px;
}

.toast_content_text {
	color: #fff;
	font-size: 38rpx;
	text-align: center;
}