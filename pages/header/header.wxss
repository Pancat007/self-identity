.header {
	display: flex;
	flex-direction: row;
	background-color: blueviolet;
}

.userinfo {
	padding: 2px;
	display: flex;
	flex-direction: row;
}

.userinfo-avatar {
	width: 68rpx;
	height: 68rpx;
	margin-left: 10px;
	border-radius: 50%; 
}

.userinfo-nickname {
	margin: 2px;
	font-weight: bold;
	color: #aaa;
}

.question-number {
	margin-top: 2px;
	margin-left: 32px;
	font-size: 20px;
	font-weight: bolder;
	color: red;
}

.help {
	padding: 3px;
	margin-top: 2px;
	margin-left: 10px;
	display: flex;
	flex-direction: row;
}

.help_img {
	width: 48rpx;
	height: 48rpx;
	margin-top: 2px;
	margin-left: 20px;
	border-radius: 50%; 
  background-color: rgb(183, 80, 252);
}

.help_txt {
	font-weight: bold;
	margin: 2px;
}